{
  "expo": {
    "name": "gymcare-app",
    "slug": "gymcare-app",
    "version": "1.0.0",
    "scheme": "gymcareapp",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Ứng dụng cần quyền truy cập thư viện ảnh để đổi ảnh đại diện."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "READ_EXTERNAL_STORAGE", 
        "WRITE_EXTERNAL_STORAGE"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "data": [
            {
              "scheme": "gymcareapp",
              "host": "payment-return"
            },
            {
              "scheme": "vnpay"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ]
      
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
